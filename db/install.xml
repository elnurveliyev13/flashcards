<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="mod/flashcards/db" VERSION="2025102501" COMMENT="Flashcards module">
  <TABLES>
    <TABLE NAME="flashcards" COMMENT="Flashcards activity instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course_idx" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_progress" COMMENT="Per-user spaced repetition progress">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="flashcardsid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="100" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="step" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="due" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="addedat" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="lastat" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="hidden" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="flashcards_user_idx" UNIQUE="false" FIELDS="flashcardsid, userid"/>
        <INDEX NAME="progress_unique" UNIQUE="true" FIELDS="flashcardsid, userid, deckid, cardid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_user_access" COMMENT="User access status and grace period tracking">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="active"/>
        <FIELD NAME="last_enrolment_check" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="grace_period_start" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="grace_period_days" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="30"/>
        <FIELD NAME="blocked_at" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_uix" UNIQUE="true" FIELDS="userid"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_completion_cache" COMMENT="Cache of completed activities for access control">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="idnumber" TYPE="char" LENGTH="100" NOTNULL="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="completed_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_idnumber_uix" UNIQUE="true" FIELDS="userid, idnumber"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="idnumber_idx" UNIQUE="false" FIELDS="idnumber"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_decks" COMMENT="Decks (private or shared)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="scope" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="private"/>
        <FIELD NAME="access_idnumbers" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="meta" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course_idx" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_cards" COMMENT="Cards repository (global or private)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="ownerid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="scope" TYPE="char" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="payload" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="unique_card" UNIQUE="true" FIELDS="deckid, cardid"/>
        <INDEX NAME="deck_idx" UNIQUE="false" FIELDS="deckid"/>
        <INDEX NAME="owner_idx" UNIQUE="false" FIELDS="ownerid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
