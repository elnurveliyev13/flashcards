<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="mod/flashcards/db" VERSION="2025122502" COMMENT="Flashcards module">
  <TABLES>
    <TABLE NAME="flashcards" COMMENT="Flashcards activity instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course_idx" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_progress" COMMENT="Per-user spaced repetition progress">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="flashcardsid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="100" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="step" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="due" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="addedat" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="lastat" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="hidden" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="flashcards_user_idx" UNIQUE="false" FIELDS="flashcardsid, userid"/>
        <INDEX NAME="progress_unique" UNIQUE="true" FIELDS="flashcardsid, userid, deckid, cardid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_user_access" COMMENT="User access status and grace period tracking">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="active"/>
        <FIELD NAME="last_enrolment_check" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="grace_period_start" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="grace_period_days" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="30"/>
        <FIELD NAME="blocked_at" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_uix" UNIQUE="true" FIELDS="userid"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_completion_cache" COMMENT="Cache of completed activities for access control">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="idnumber" TYPE="char" LENGTH="100" NOTNULL="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="completed_at" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_idnumber_uix" UNIQUE="true" FIELDS="userid, idnumber"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="idnumber_idx" UNIQUE="false" FIELDS="idnumber"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_decks" COMMENT="Decks (private or shared)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="scope" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="private"/>
        <FIELD NAME="access_idnumbers" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="meta" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course_idx" UNIQUE="false" FIELDS="courseid"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_cards" COMMENT="Cards repository (global or private)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="ownerid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="scope" TYPE="char" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="payload" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="unique_card" UNIQUE="true" FIELDS="deckid, cardid"/>
        <INDEX NAME="deck_idx" UNIQUE="false" FIELDS="deckid"/>
        <INDEX NAME="owner_idx" UNIQUE="false" FIELDS="ownerid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_card_trans" COMMENT="Per-language translations for cards">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="lang" TYPE="char" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="text" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="deck_card_lang_uix" UNIQUE="true" FIELDS="deckid, cardid, lang"/>
        <INDEX NAME="deck_idx" UNIQUE="false" FIELDS="deckid"/>
        <INDEX NAME="lang_idx" UNIQUE="false" FIELDS="lang"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_card_example_trans" COMMENT="Per-language translations for card examples">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="64" NOTNULL="true"/>
        <FIELD NAME="example_idx" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="lang" TYPE="char" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="text" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="deck_card_example_lang_uix" UNIQUE="true" FIELDS="deckid, cardid, example_idx, lang"/>
        <INDEX NAME="deck_idx" UNIQUE="false" FIELDS="deckid"/>
        <INDEX NAME="lang_idx" UNIQUE="false" FIELDS="lang"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_orbokene" COMMENT="Dictionary cache for Norwegian fixed expressions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="entry" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="normalized" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="baseform" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="grammar" TYPE="char" LENGTH="100" NOTNULL="false"/>
        <FIELD NAME="definition" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="translation" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="examplesjson" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="meta" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="normalized_uix" UNIQUE="true" FIELDS="normalized"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_user_stats" COMMENT="User statistics for dashboard and gamification">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="total_reviews" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="total_cards_created" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="current_streak_days" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="longest_streak_days" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="last_study_date" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="first_study_date" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="easy_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="normal_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="hard_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="total_study_time" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_uix" UNIQUE="true" FIELDS="userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_daily_log" COMMENT="Daily activity log for charts and history">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="log_date" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="reviews_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="cards_created" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="study_time" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_date_uix" UNIQUE="true" FIELDS="userid, log_date"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="date_idx" UNIQUE="false" FIELDS="log_date"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_push_subs" COMMENT="Push notification subscriptions for PWA">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="endpoint" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="p256dh" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="auth" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="lang" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="en"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="enabled_idx" UNIQUE="false" FIELDS="enabled"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_tts_usage" COMMENT="Monthly TTS usage per user and provider">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="provider" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="period_start" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="UTC timestamp for 1st day of the month"/>
        <FIELD NAME="characters" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="requests" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="user_provider_period_uix" UNIQUE="true" FIELDS="userid, provider, period_start"/>
        <INDEX NAME="provider_idx" UNIQUE="false" FIELDS="provider"/>
        <INDEX NAME="period_idx" UNIQUE="false" FIELDS="period_start"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="flashcards_reports" COMMENT="User reports for cards">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="deckid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="cardid" TYPE="char" LENGTH="64" NOTNULL="true" DEFAULT=""/>
        <FIELD NAME="cardtitle" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="message" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="open"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="deck_idx" UNIQUE="false" FIELDS="deckid"/>
        <INDEX NAME="card_idx" UNIQUE="false" FIELDS="cardid"/>
        <INDEX NAME="userid_idx" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
