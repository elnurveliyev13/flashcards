                  <button id="btnFetchPOS" class="iconbtn" title="{{#str}} autofill, mod_flashcards {{/str}}">&#128269;</button>
                </div>
                <div id="uPOSHelp" class="small"></div>
              </div>
              <div class="slot" id="slot_gender">
                <span class="tag">{{#str}} gender, mod_flashcards {{/str}}</span>
                <select id="uGender">
                  <option value="">-</option>
                  <option value="m">{{#str}} gender_m, mod_flashcards {{/str}}</option>
                  <option value="f">{{#str}} gender_f, mod_flashcards {{/str}}</option>
                  <option value="n">{{#str}} gender_n, mod_flashcards {{/str}}</option>
                  <option value="c">{{#str}} gender_c, mod_flashcards {{/str}}</option>
                </select>
              </div>
              <div class="slot" id="slot_noun_forms">
